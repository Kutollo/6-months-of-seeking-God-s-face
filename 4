    // Mark past verses
    const today = new Date();
    const verseList = document.querySelectorAll("#verseList li");
    verseList.forEach((li, index) => {
      const day = index + 1;
      if (today.getMonth() === 6 && today.getDate() > day) {
        li.style.textDecoration = "line-through";
        li.style.opacity = "0.6";
      }
    });
